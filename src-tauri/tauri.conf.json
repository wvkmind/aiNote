{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI 笔记系统",
  "version": "1.0.0",
  "identifier": "com.wvkmi.ai-note-system",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AI 笔记系统",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "fs:allow-temp-write",
            "fs:allow-temp-read",
            "fs:allow-temp-write-recursive",
            "dialog:allow-open",
            "dialog:allow-save",
            "dialog:allow-message",
            "dialog:allow-ask",
            "dialog:allow-confirm"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "wvkmi",
    "copyright": "Copyright © 2025",
    "category": "Productivity",
    "shortDescription": "AI 增强的本地优先笔记系统",
    "longDescription": "一个本地优先的 Notion 风格笔记软件，集成 Poe API 和 Ollama，支持与 AI 边聊天边写笔记，所有对话与想法都自动保存到当前文档中。",
    "macOS": {
      "minimumSystemVersion": "10.13",
      "infoPlist": "Info.plist"
    }
  }
}
